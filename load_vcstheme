function load_vcstheme {
  local pwd=$PWD
  local location=${1%/*}
  
  if [[ $location == ${location#/} ]]; then
    location=$PWD/$location
  fi

  # self modifying code. this is bad.
  # i'm doing it, anyway
  eval $(print "function load_vcstheme { 
    source $location/Henchman/vcs_theme
  }")

}

load_vcstheme $0

